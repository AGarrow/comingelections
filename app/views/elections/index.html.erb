<div class="span3">
  <a class="twitter-timeline" href="https://twitter.com/comingelections/elections" data-widget-id="337208167597473792">Tweets from @comingelections/elections</a>
</div>

<h1>Upcoming Elections
<%= link_to "CSV", elections_path(format: "csv"), :class => "btn btn-success pull-right"%>
</h1>

<div class="span6">
    <table class="table table-striped">
      <tr>
        <th>Year</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Jurisdiction</th>
        <th>Election type</th>
        <th>Scope</th>
        <th>Division</th>
        <th>Notes</th>
        <th>Source</th>
        <th>Updated at</th>
      </tr>

    <% @elections.each do |election| %>
      <tr>
        <td><%= election.year %></td>
        <td><%= election.start_date %></td>
        <td><%= election.end_date %></td>
        <td><%= election.jurisdiction %></td>
        <td><%= election.election_type %></td>
        <td><%= election.scope %></td>
        <td><%= election.division %></td>
        <td><%= election.notes %></td>
        <td><%= link_to nil, election.source %></td>
        <td><%= election.updated_at %></td>
      </tr>
    <% end %>
    </table>
</div>

