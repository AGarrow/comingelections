source 'https://rubygems.org'

gem 'rails', '3.2.13'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
end

group :production do
  gem 'pg'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'sqlite3'
end

# Views
gem 'jquery-rails'
gem 'twitter-bootstrap-rails'
gem 'less-rails'

# Rake tasks
gem 'json'
gem 'nokogiri'

# Admin
gem 'rails_admin'
gem 'devise'
